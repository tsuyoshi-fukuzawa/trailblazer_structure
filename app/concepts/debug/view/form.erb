<!-- 引き渡されたオプションは、options変数に格納されている。取り出す場合は、シンボルでアクセスする -->
<% f = options[:f] %>

<div class='form-group row'>
  <div class='col-sm-3 col-form-label'>
    Text Field
  </div>
  <div class='col-sm-9'>
    <%= f.text_field :col_string, { class: 'form-control', placeholder: '例) あいうえ' } %>
  </div>
</div>

<div class='form-group row'>
  <div class='col-sm-3 col-form-label'>
    Text Area
  </div>
  <div class='col-sm-9'>
    <%= f.text_area :col_text, { class: 'form-control', placeholder: '例) あいうえ', rows: 3 } %>
  </div>
</div>

<div class='form-group row'>
  <div class='col-sm-3 col-form-label'>
    Checkbox
  </div>
  <div class='col-sm-9'>
    <label>
      <%= f.check_box :col_boolean %>
      選択肢A
    </label>
  </div>
</div>
